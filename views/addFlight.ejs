<main>
    <h1>this is the add flight page</h1>
    <p>Welcome to <%= title %></p>


  
  
    <h1>ADD FLIGHT</h1>
     <div class="" style="width: 450px;">
        
        <form action= "/" method="POST">

             <div class="mb-12">
                 <label for="airport" class="form-label">Airport</label>
                 <select class="form-select" name="airport" aria-label="Default select example"> 
                    <option selected> select airport...</option>
                     <option value="AUS"> AUS</option>
                     <option value="DFW"> DFW</option>
                     <option value="DEN"> DEN</option>
                     <option value="LAX"> LAX</option>
                     <option value="SAN"> SAN</option>
                 </select>
             </div> 

             <div class="mb-12">
                <label for="airline" class="form-label">Airline</label>
                <select class="form-select" name="airline" aria-label="Default select example" >
                     <option selected> select airport...</option>
                     <option value="America">America</option>
                     <option value="Southwest">Southwest</option>
                     <option value="United">United</option>
                </select>
             </div> 
             <div class="mb-12">
                 <label for="exampleFormControlInput1" class="form-label"> Flight No.</label>
                 <input type="number" class="form-control" id="exampleFormControlInput1" name="flightNo"/>
             </div>

             <div class="mb-12">
                 <label for="exampleFormControlInput1" class="form-label"> Departure Date</label>
                 <input type="datetime-local" class="form-control"  name="depart" id="exampleFormControlInput1" />
             </div>
             <div class="mb-4">
                 <button type="submit" class="btn btn-secondary btn-lg b1" >Add Flight</button>
             </div>
     </form>
     </div>
</main>

    


